{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "AUTH_SECRET",
        "AUTH_TRUST_HOST",
        "BLOB_READ_WRITE_TOKEN",
        "CHAT_POSTGREST_URL",
        "CHAT_POSTGRES_AUTH_KEY",
        "GEMINI_API_KEY",
        "MINIO_S3_ACCESS_KEY",
        "MINIO_S3_BUCKET",
        "MINIO_S3_SECRET_KEY",
        "MINIO_S3_URL",
        "N8N_API_KEY",
        "N8N_API_URL",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_API_KEY",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "OPENAI_API_KEY",
        "POSTGREST_URL",
        "POSTGRES_AUTH_KEY",
        "SHOPIFY_API_KEY",
        "SHOPIFY_API_SECRET_KEY",
        "SHOPIFY_SCOPES",
        "POSTGRES_URL",
        "GOOGLE_API_KEY",
        "MISTRAL_API_KEY",
        "GROQ_API_KEY",
        "ANTHROPIC_API_KEY",
        "DEEPSEEK_API_KEY",
        "LANGCHAIN_CALLBACKS_BACKGROUND"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
